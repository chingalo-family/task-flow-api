# Database Configuration
# You can change the database name by modifying the filename below
DB_NAME=taskflow.db
DATABASE_URL="file:./${DB_NAME}"

# Server Configuration
PORT=3000

# JWT Secret (Change this to a random string in production)
JWT_SECRET="your-secret-key-here-change-in-production"

# Email Configuration (Optional - for password reset emails)
# Uncomment and configure to enable email functionality
# For Gmail: Use App Password (not regular password)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password
# SMTP_FROM=noreply@taskflow.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:3000
