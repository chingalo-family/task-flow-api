# Database Configuration
# You can change the database name by modifying the filename below
DB_NAME=taskflow.db
DATABASE_URL="file:./${DB_NAME}"

# Server Configuration
# Server Configuration
PORT=3600
PUBLIC_URL= # (Optional, for Swagger "Try it out") Set full URL for production e.g. https://domain.com/task-flow-api

# JWT Configuration
JWT_SECRET="your-secret-key-here-change-in-production"
JWT_EXPIRATION=7d
# JWT expiration format: Use 's' for seconds, 'm' for minutes, 'h' for hours, 'd' for days
# Examples: 60s, 30m, 24h, 7d

# Password Reset Token Configuration  
RESET_TOKEN_EXPIRATION=3600000
# Reset token expiration in milliseconds (3600000 = 1 hour)
# Examples: 1800000 (30 min), 3600000 (1 hour), 7200000 (2 hours)

# Security Configuration
BCRYPT_ROUNDS=10
# Number of salt rounds for bcrypt hashing (default: 10)
# Higher rounds are more secure but slower

# Email Configuration (Optional - for password reset emails)
# Uncomment and configure to enable email functionality
# For Gmail: Use App Password (not regular password)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-specific-password
# SMTP_FROM=noreply@taskflow.com

# Frontend URL (for password reset links)
FRONTEND_URL=http://localhost:${PORT}
